<h1>お気に入り一覧</h1>
<table>
  <% if @favorites.present? %>
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>


    <tbody>
      <% @favorites.each do |favorite| %>
        <tr>
          <th><%= favorite.blog.user.name %></th>
          <th><%= favorite.blog.title %></th>
          <th><%= favorite.blog.content %></th>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <p>お気に入りはありません</p>
  <% end %>
</table>
